{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"removeComments": true,
		"lib": ["es2017", "dom"],
		"skipDefaultLibCheck": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@apps/*": ["apps/*"],
			"@libs/*": ["libs/*"],
			"@vxnn/docker-handler": ["libs/docker-handler/src/index.ts"],
			"@vxnn/models/base-model": [
				"libs/nest/models/base-model/src/index.ts"
			],
			"@vxnn/models/model-index": [
				"libs/nest/models/model-index/src/index.ts"
			],
			"@vxnn/models/session": ["libs/nest/models/session/src/index.ts"],
			"@vxnn/models/user": ["libs/nest/models/user/src/index.ts"],
			"@vxnn/nest/auth": ["libs/nest/auth/src/index.ts"],
			"@vxnn/nest/config/app": ["libs/nest/config/app/src/index.ts"],
			"@vxnn/nest/config/db": ["libs/nest/config/db/src/index.ts"],
			"@vxnn/nest/config/graphql": [
				"libs/nest/config/graphql/src/index.ts"
			],
			"@vxnn/nest/providers/cipher": [
				"libs/nest/providers/cipher/src/index.ts"
			],
			"@vxnn/nest/providers/db": ["libs/nest/providers/db/src/index.ts"],
			"@vxnn/nest/providers/graphql": [
				"libs/nest/providers/graphql/src/index.ts"
			],
			"@vxnn/nest/providers/migrator": [
				"libs/nest/providers/migrator/src/index.ts"
			],
			"@vxnn/nest/providers/seeders": [
				"libs/nest/providers/seeders/src/index.ts"
			]
		}
	},
	"exclude": ["node_modules", ".vscode", ".yarn", "dist", "public", "tmp"]
}
