{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"removeComments": true,
		"lib": ["es2017", "dom"],
		"skipDefaultLibCheck": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@apps/*": ["apps/*"],
			"@libs/*": ["libs/*"],
			"@nest-vue/deployment": ["libs/deployment/src/index.ts"],
			"@nest-vue/docker-handler": ["libs/docker-handler/src/index.ts"],
			"@nest-vue/models/base-model": [
				"libs/nest/models/base-model/src/index.ts"
			],
			"@nest-vue/models/session": [
				"libs/nest/models/session/src/index.ts"
			],
			"@nest-vue/models/user": ["libs/nest/models/user/src/index.ts"],
			"@nest-vue/nest/auth": ["libs/nest/auth/src/index.ts"],
			"@nest-vue/nest/config/app": ["libs/nest/config/app/src/index.ts"],
			"@nest-vue/nest/config/db": ["libs/nest/config/db/src/index.ts"],
			"@nest-vue/nest/config/graphql": [
				"libs/nest/config/graphql/src/index.ts"
			],
			"@nest-vue/nest/providers/cipher": [
				"libs/nest/providers/cipher/src/index.ts"
			],
			"@nest-vue/nest/providers/db": [
				"libs/nest/providers/db/src/index.ts"
			],
			"@nest-vue/nest/providers/graphql": [
				"libs/nest/providers/graphql/src/index.ts"
			],
			"@nest-vue/nest/providers/migrator": [
				"libs/nest/providers/migrator/src/index.ts"
			],
			"@nest-vue/nest/providers/seeders": [
				"libs/nest/providers/seeders/src/index.ts"
			],
			"@nest-vue/prisma/postgres": ["libs/prisma/postgres/src/index.ts"],
			"@nest-vue/prisma/wrapper": ["libs/prisma/wrapper/src/index.ts"]
		}
	},
	"exclude": ["node_modules", ".vscode", ".yarn", "dist", "public", "tmp"]
}
