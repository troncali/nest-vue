{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../.yarn/cache/out-tsc",
		"types": ["node"],
		"composite": true,
		"paths": {
			"@/*": ["apps/frontend/src/*"]
		}
	},
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.test.tsx"
	],
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"]
}
