{
	"name": "nest-vue",
	"version": "0.9.0",
	"description": "Nx monorepo template with dockerized NestJS + Fastify backend, Vue frontend, NGINX, Jest + Cypress testing, Jenkins CI/CD, and agnostic data via Prisma/TypeORM + GraphQL.",
	"main": "dist/apps/backend/src/main.js",
	"repository": "https://github.com/troncali/nest-vue.git",
	"author": "<7217131+troncali@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"build": "nx build",
		"build:prod": "nx run backend:prod; nx build frontend",
		"dep-graph": "nx dep-graph",
		"deploy:init": "yarn build:prod; dotenv -- cross-env-shell DEPLOY_COLOR=blue ./libs/deploy-scripts/init.sh",
		"deploy:migration": "dotenv -- cross-var docker --context %DOCKER_REMOTE_CONTEXT% compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-prod.yml up -d --force-recreate migrator",
		"deploy:placeholder": "dotenv -- cross-env-shell ./libs/deploy-scripts/placeholder.sh",
		"deploy:production": "yarn build:prod; dotenv -- cross-env-shell ./libs/deploy-scripts/deploy.sh production",
		"deploy:staging": "dotenv -- cross-env-shell ./libs/deploy-scripts/deploy.sh",
		"deploy:swap": "dotenv -- cross-env-shell ./libs/deploy-scripts/swap.sh",
		"docker:build": "yarn build:prod; dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-prod.yml build",
		"docker:dev": "dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-dev.yml up nginx db",
		"docker:dev-certs": "dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-dev.yml run certbot",
		"docs:b": "compodoc -p ./apps/backend/tsconfig.app.json -d dist/docs/backend -s -w -o --port 9997 --name \"Backend Documentation\"",
		"docs:m": "vitepress build docs",
		"docs:m-dev": "vitepress dev docs -p 9998 --open",
		"jenkins": "dotenv -- cross-var jenkins --httpPort=%JENKINS_PORT% --httpListenAddress=%JENKINS_HOST%",
		"migrate": "run migrate:prisma",
		"migrate:prisma": "yarn nx run PrismaPostgres:migrate",
		"migrate:typeorm": "run typeorm:migration-run",
		"prisma": "ts-node --transpileOnly=true --project libs/prisma/postgres/tsconfig.lib.json -r tsconfig-paths/register libs/prisma/postgres/src/lib/wrapper",
		"prisma:pnp": "pnpify yarn prisma",
		"seed": "run seed:prisma",
		"seed:prisma": "ts-node --transpileOnly=true --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/seed.ts prisma",
		"seed:typeorm": "ts-node --transpileOnly=true --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/seed.ts",
		"typeorm:migration-create": "typeorm migration:create",
		"typeorm:migration-run": "ts-node --transpileOnly=true --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/migrate.ts run",
		"typeorm:migration-undo": "ts-node --transpileOnly=true --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/migrate.ts undo",
		"nx": "nx",
		"snyk": "snyk test",
		"start": "nx serve",
		"test": "nx test",
		"lint": "nx lint",
		"e2e": "nx e2e",
		"affected:apps": "nx affected:apps",
		"affected:libs": "nx affected:libs",
		"affected:build": "nx affected:build",
		"affected:e2e": "nx affected:e2e",
		"affected:test": "nx affected:test",
		"affected:lint": "nx affected:lint",
		"affected:dep-graph": "nx affected:dep-graph",
		"affected": "nx affected",
		"format": "nx format:write",
		"format:write": "nx format:write",
		"format:check": "nx format:check",
		"update": "nx migrate latest",
		"workspace-generator": "nx workspace-generator",
		"help": "nx help"
	},
