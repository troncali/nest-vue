	"depricated-scripts": {
		"b-prebuild": "yarn rimraf build",
		"b-build": "(yarn b-prebuild) && yarn nest build -p ./src/backend/tsconfig.build.json",
		"b-start": "yarn nest start --watch -p ./src/backend/tsconfig.build.json",
		"b-start:debug": "yarn nest start --debug --watch -p ./src/backend/tsconfig.build.json",
		"b-start:prod": "yarn node build/src/backend/main",
		"b-test": "yarn jest --selectProjects backend",
		"b-test:watch": "yarn jest --watch --selectProjects backend",
		"b-test:cov": "yarn jest --coverage --selectProjects backend",
		"b-test:debug": "yarn node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"f-start": "yarn vue-cli-service serve ./src/frontend/main.ts",
		"f-build": "yarn vue-cli-service build --dest=\"./public\" ./src/frontend/main.ts",
		"f-test": "yarn jest --selectProjects frontend",
		"f-watch": "yarn vue-cli-service build --watch --no-clean --dest=\"./public\" ./src/frontend/main.ts"
	}
