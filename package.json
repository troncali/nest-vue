{
	"name": "nest-vue",
	"version": "0.6.0",
	"description": "Nx monorepo sensibly configured with dockerized NestJS backend, Vue frontend, NGINX, Jest & Cypress testing, Jenkins CI/CD, and agnostic data via TypeORM + GraphQL.",
	"main": "builds/backend/main.js",
	"repository": "https://github.com/troncali/nest-vue.git",
	"author": "<7217131+troncali@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"docker:deploy": "docker --context DO compose -f docker-compose.yml -f ./src/docker/docker-compose-prod.yml up",
		"docker:dev": "docker compose -f docker-compose.yml -f ./src/docker/docker-compose-dev.yml up nginx db",
		"docker:dev-certs": "docker compose -f docker-compose.yml -f ./src/docker/docker-compose-dev.yml run certbot",
		"docker:prod": "nx build backend && nx build frontend && docker compose -f docker-compose.yml -f ./src/docker/docker-compose-prod.yml build --no-cache",
		"docs": "compodoc -p ./src/backend/tsconfig.app.json -d docs -s -w",
		"migration:create": "typeorm migration:create",
		"migration:run": "ts-node --project src/backend/tsconfig.app.json -r tsconfig-paths/register src/backend/migrate.ts run",
		"migration:undo": "ts-node --project src/backend/tsconfig.app.json -r tsconfig-paths/register src/backend/migrate.ts undo",
		"seed": "ts-node --project src/backend/tsconfig.app.json -r tsconfig-paths/register src/backend/seed.ts",
		"jenkins": "jenkins --httpPort=9999 --httpListenAddress=127.0.0.1",
		"nx": "nx",
		"start": "nx serve",
		"build": "nx build",
		"test": "nx test",
		"lint": "nx workspace-lint && nx lint",
		"e2e": "NODE_ENV=testing nx e2e",
		"affected:apps": "nx affected:apps",
		"affected:libs": "nx affected:libs",
		"affected:build": "nx affected:build",
		"affected:e2e": "nx affected:e2e",
		"affected:test": "nx affected:test",
		"affected:lint": "nx affected:lint",
		"affected:dep-graph": "nx affected:dep-graph",
		"affected": "nx affected",
		"format": "nx format:write",
		"format:write": "nx format:write",
		"format:check": "nx format:check",
		"update": "nx migrate latest",
		"workspace-generator": "nx workspace-generator",
		"dep-graph": "nx dep-graph",
		"help": "nx help"
	},
