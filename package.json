{
	"name": "nest-vue",
	"version": "0.8.0",
	"description": "Nx monorepo with dockerized NestJS backend, Vue frontend, NGINX, Jest & Cypress testing, Jenkins CI/CD, and agnostic data via TypeORM + GraphQL.",
	"main": "dist/apps/backend/src/main.js",
	"repository": "https://github.com/troncali/nest-vue.git",
	"author": "<7217131+troncali@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"build": "nx build",
		"build:prod": "nx build backend; nx build frontend --prod",
		"dep-graph": "nx dep-graph",
		"deploy:init": "yarn build:prod; dotenv -- cross-env-shell DEPLOY_COLOR=blue ./libs/deploy-scripts/init.sh",
		"deploy:migrate": "dotenv -- cross-var docker --context %DOCKER_REMOTE_CONTEXT% compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-prod.yml up -d --force-recreate migrator",
		"deploy:production": "yarn build:prod; dotenv -- cross-env-shell ./libs/deploy-scripts/deploy.sh production",
		"deploy:staging": "dotenv -- cross-env-shell ./libs/deploy-scripts/deploy.sh",
		"deploy:swap": "dotenv -- cross-env-shell ./libs/deploy-scripts/swap.sh",
		"docker:build": "yarn build:prod; dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-prod.yml build",
		"docker:dev": "dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-dev.yml up nginx db",
		"docker:dev-certs": "dotenv -- cross-var docker compose -p %DOCKER_PROJECT_NAME% -f docker-compose.yml -f ./apps/docker/docker-compose-dev.yml run certbot",
		"docs:b": "compodoc -p ./apps/backend/tsconfig.app.json -d dist/docs/backend -s -w -o --port 9997 --name \"Backend Documentation\"",
		"docs:m": "vuepress build docs",
		"docs:m-dev": "vuepress dev docs -p 9998 --open",
		"migration:create": "typeorm migration:create",
		"migration:run": "ts-node --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/migrate.ts run",
		"migration:undo": "ts-node --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/migrate.ts undo",
		"seed": "ts-node --project apps/backend/tsconfig.app.json -r tsconfig-paths/register apps/backend/src/seed.ts",
		"jenkins": "dotenv -- cross-var jenkins --httpPort=%JENKINS_PORT% --httpListenAddress=%JENKINS_HOST%",
		"nx": "nx",
		"start": "nx serve",
		"snyk": "snyk test",
		"test": "nx test",
		"lint": "nx workspace-lint && nx lint",
		"e2e": "nx e2e",
		"affected:apps": "nx affected:apps",
		"affected:libs": "nx affected:libs",
		"affected:build": "nx affected:build",
		"affected:e2e": "nx affected:e2e",
		"affected:test": "nx affected:test",
		"affected:lint": "nx affected:lint",
		"affected:dep-graph": "nx affected:dep-graph",
		"affected": "nx affected",
		"format": "nx format:write",
		"format:write": "nx format:write",
		"format:check": "nx format:check",
		"update": "nx migrate latest",
		"workspace-generator": "nx workspace-generator",
		"help": "nx help"
	},
