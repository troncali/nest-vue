{
	"name": "nest-vue",
	"version": "0.3.0",
	"description": "Fullstack typescript monorepo for NestJS + Fastify backend, Vue frontend, Jest testing, and agnostic data via TypeORM + GraphQL.",
	"main": "build/src/backend/main.js",
	"repository": "https://github.com/troncali/nest-vue.git",
	"author": "<7217131+troncali@users.noreply.github.com>",
	"license": "MIT",
	"scripts": {
		"b-prebuild": "yarn rimraf build",
		"b-build": "(yarn b-prebuild) && yarn nest build -p ./src/backend/tsconfig.build.json",
		"b-start": "yarn nest start --watch -p ./src/backend/tsconfig.build.json",
		"b-start:debug": "yarn nest start --debug --watch -p ./src/backend/tsconfig.build.json",
		"b-start:prod": "yarn node build/src/backend/main",
		"b-test": "yarn jest --selectProjects backend",
		"b-test:watch": "yarn jest --watch --selectProjects backend",
		"b-test:cov": "yarn jest --coverage --selectProjects backend",
		"b-test:debug": "yarn node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"docker:dev": "CERT_ENV=dev docker-compose -f docker-compose.yml -f ./src/docker/docker-compose-dev.yml up nginx db",
		"docker:deploy": "docker-compose --context digitalocean-t up",
		"docs": "yarn dlx @compodoc/compodoc -p ./src/backend/tsconfig.json -d docs -s -w",
		"f-start": "yarn vue-cli-service serve ./src/frontend/main.ts",
		"f-build": "yarn vue-cli-service build --dest=\"./public\" ./src/frontend/main.ts",
		"f-test": "yarn jest --selectProjects frontend",
		"f-watch": "yarn vue-cli-service build --watch --no-clean --dest=\"./public\" ./src/frontend/main.ts",
		"migration:create": "yarn typeorm migration:create -n",
		"migration:run": "yarn ts-node -r tsconfig-paths/register src/backend/migrate.ts run",
		"migration:undo": "yarn ts-node -r tsconfig-paths/register src/backend/migrate.ts undo",
		"seed": "yarn ts-node -r tsconfig-paths/register src/backend/seed.ts",
		"jenkins": "yarn exec jenkins --httpPort=9999 --httpListenAddress=127.0.0.1",
		"test": "yarn jest"
	},
	"dependencies": {
		"@casl/ability": "^5.2.2",
		"@nestjs/common": "^7.5.5",
		"@nestjs/config": "^0.6.1",
		"@nestjs/core": "^7.5.5",
		"@nestjs/graphql": "^7.9.10",
		"@nestjs/platform-fastify": "^7.5.5",
		"@nestjs/serve-static": "^2.1.4",
		"@nestjs/typeorm": "^7.1.5",
		"apollo-server-fastify": "3.0.0-alpha.3",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"core-js": "^3.8.0",
		"fast-json-stringify": "^2.5.2",
		"fastify": "^3.9.1",
		"fastify-static": "^3.3.0",
		"graphql": "^15.5.0",
		"graphql-tools": "^7.0.4",
		"joi": "^17.4.0",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.3",
		"typeorm": "^0.2.31",
		"vue": "^3.0.0",
		"vue-class-component": "^8.0.0-0",
		"vue-router": "^4.0.0-0",
		"vuex": "^4.0.0-0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@nestjs/cli": "^7.5.3",
		"@nestjs/schematics": "^7.2.2",
		"@nestjs/testing": "^7.5.5",
		"@types/faker": "^5.1.7",
		"@types/jest": "^26.0.15",
		"@types/long": "^4.0.1",
		"@types/node": "^14.14.10",
		"@types/supertest": "^2.0.10",
		"@types/webpack": "^4.41.25",
		"@types/webpack-env": "^1.16.0",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.8.2",
		"@typescript-eslint/parser": "^4.8.2",
		"@vue/cli-plugin-babel": "~4.5.0",
		"@vue/cli-plugin-eslint": "~4.5.0",
		"@vue/cli-plugin-router": "~4.5.0",
		"@vue/cli-plugin-typescript": "~4.5.0",
		"@vue/cli-plugin-unit-jest": "~4.5.0",
		"@vue/cli-plugin-vuex": "~4.5.0",
		"@vue/cli-service": "~4.5.0",
		"@vue/compiler-dom": "^3.0.4",
		"@vue/compiler-sfc": "^3.0.4",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/eslint-config-typescript": "^5.0.2",
		"@vue/test-utils": "^2.0.0-0",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"copy-webpack-plugin": "5.1.2",
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-vue": "^7.0.0-0",
		"faker": "^5.5.0",
		"jest": "^26.6.3",
		"jest-environment-jsdom-fifteen": "^1.0.2",
		"jest-serializer-vue": "^2.0.2",
		"prettier": "^2.2.1",
		"sass": "^1.26.5",
		"sass-loader": "^8.0.2",
		"source-map": "0.6.1",
		"supertest": "^6.0.1",
		"ts-jest": "^26.4.3",
		"ts-loader": "^8.0.8",
		"ts-node": "^9.0.0",
		"tsconfig-paths": "^3.9.0",
		"tslib": "^2.0.3",
		"typescript": "^4.1.2",
		"vue-jest": "^5.0.0-0",
		"vue-template-compiler": "^2.6.12",
		"webpack": "4.44.0"
	}
}
